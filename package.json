{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "npm": ">=8.0.0 <=8.19.2",
    "node": ">=18.0.0 <=18.17.0"
  },
  "scripts": {
    "install:pkg": "yarn install --frozen-lockfile && yarn prepare",
    "build": "rimraf ./dist && tsc && yarn copy:docs && node ./dist/src/index.js",
    "copy:docs": "copyfiles --error --up 1 src/docs/*.* dist/src",
    "start": "node dist/src/index.js",
    "dev": "nodemon ./src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch --onlyChanged",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/babel__core": "^7.20.0",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.8.3",
    "module-alias": "^2.2.3",
    "swagger-ui-express": "^4.6.2",
    "yamljs": "^0.3.0"
  },
  "_moduleAliases": {
    "@app": "./dist/src/app",
    "@middlewares": "./dist/src/middlewares",
    "@controllers": "./dist/src/controllers",
    "@routes": "./dist/src/routes",
    "@services": "./dist/src/services",
    "@utils": "./dist/src/utils"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "eslint ."
    ],
    "*.{js,json,css,html}": [
      "prettier --write ."
    ],
    "*.test.{ts,js}": "jest"
  }
}
